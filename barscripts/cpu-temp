#!/usr/bin/env sh

case $BLOCK_BUTTON in
    1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)" ;;
    3) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- % is of single core." ;;
esac

temp=$(sensors | awk '/Core 0/ {print $3}' | tr -d 'Â°C')
temp=$(printf "%.0f" "$temp")

if [ "$temp" -ge 90 ]; then
    color="#ff0000"
elif [ "$temp" -ge 80 ]; then
    color="#ffa500"
elif [ "$temp" -ge 70 ]; then
    color="#ffff00"
else
    color="#00ff00"
fi

LABEL="ï‹‹"
printf "<span color='%s'>%s%sÂ°</span>\n" "$color" "$LABEL" "$temp"
