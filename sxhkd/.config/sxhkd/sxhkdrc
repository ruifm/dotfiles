mod4+Return
    $TERMINAL

mod4+m
    rofi -show run

mod4+d
    cd ~/dotfiles && eval $FZF_DEFAULT_COMMAND | rofi -width 90 -dmenu -p dotfiles | xargs -d '\n' -r $TERMINAL -e $EDITOR

mod4+a
    rg --files | rofi -width 90 -dmenu -p home | xargs -r $OPENER

mod4+e
    emoji

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%  && pkill -RTMIN+1 i3blocks

mod4+{minus,plus}
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%  && pkill -RTMIN+1 i3blocks

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle  && pkill -RTMIN+1 i3blocks

mod4+shift+m
    pactl set-sink-mute @DEFAULT_SINK@ toggle  && pkill -RTMIN+1 i3blocks

XF86Audio{Prev,Play,Next}
    mediactl {previous,play-pause,next}

mod4+{Left,Down,Right}
    mediactl {previous,play-pause,next}

XF86MonBrightness{Down,Up}
    sudo light -{U,A} 5  && pkill -RTMIN+2 i3blocks

mod4+{Prior,Next}
    sudo light -{U,A} 5  && pkill -RTMIN+2 i3blocks

XF86Display
    xset dpms force off

mod4+shift+g
    lock.sh

@Print
    scrot -q 100 -t 10 -s '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

shift+@Print
    scrot -q 100 -t 10 '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

mod4+shift+f
    $TERMINAL -e $FILE_MANAGER

mod4+w
    $BROWSER

mod4+p
    $TERMINAL -e python3 -i -c 'from numpy import *'

mod4+o;{m,a,s,t,r,v,e}
    {spowrap,ace,stream,$TERMINAL -e tuir,tv,$TERMINAL -e neomutt}

mod4+g
    ducksearch

mod4+shift+c
    showclip

mod4+n;{r,k}
    record {start,stop}
