mod4+Return
    $TERMINAL

mod4+m
    rofi -show run

mod4+d
    cd ~/dotfiles && eval $FZF_DEFAULT_COMMAND | rofi -dmenu -p dotfiles | xargs -r $VISUAL

mod4+a
    rg --files | rofi -dmenu -p home | xargs -r mimeopen -n

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume $(get_sink.sh) {-,+}5%  && pkill -RTMIN+10 i3blocks

mod4+{minus,plus}
    pactl set-sink-volume $(get_sink.sh) {-,+}5%  && pkill -RTMIN+10 i3blocks

XF86AudioMute
    pactl set-sink-mute $(get_sink.sh) toggle  && pkill -RTMIN+10 i3blocks

mod4+shift+m
    pactl set-sink-mute $(get_sink.sh) toggle  && pkill -RTMIN+10 i3blocks

XF86Audio{Prev,Play,Next}
    mediactl {previous,play-pause,next}

mod4+{Left,Down,Right}
    mediactl {previous,play-pause,next}

XF86MonBrightness{Down,Up}
    light -{U,A} 5  && pkill -RTMIN+10 i3blocks

mod4+{Prior,Next}
    light -{U,A} 5  && pkill -RTMIN+10 i3blocks

XF86Display
    xset dpms force off

mod4+shift+g
    $SCREENLOCKER && mediactl pause

@Print
    scrot -q 100 -t 10 -s '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/Pictures/screenshots'

shift+@Print
    scrot -q 100 -t 10 '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/Pictures/screenshots'

mod4+shift+f
    SHELL=/usr/bin/fish $TERMINAL -e "$FILE_MANAGER"

mod4+shift+u
    $TERMINAL -e rtv

mod4+shift+w
    $BROWSER

mod4+p
    $TERMINAL -e python3 -i -c 'from numpy import *'

mod4+shift+p
    dbus-launch --autolaunch="$(cat /var/lib/dbus/machine-id)" spotify

mod4+o
    $TERMINAL -e sconsify && $TERMINAL -e cava
