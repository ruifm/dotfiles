#!/usr/bin/env sh
# shellcheck source=/dev/null
if [ "$(hostname)" != "halley" ]; then
    xrandr --setprovideroutputsource modesetting NVIDIA-0
    nvidia-settings --load-config-only &
    nvidia-settings -a '[gpu:0]/GPUPowerMizerMode=1' &
fi
xrandr --auto

if [ "$(hostname)" = "garry" ]; then
    xrandr --output eDP-1-1 --off
    xrandr --output HDMI-0 --primary --mode 1920x1080 --rate 144
fi

[ -r  ~/.config/sh/envrc ] && . ~/.config/sh/envrc

systemctl --user import-environment
dbus-update-activation-environment --systemd --all
[ -r ~/.Xresources ] && xrdb ~/.Xresources

xsetroot -cursor_name left_ptr &
feh --bg-center --no-fehbg ~/dotfiles/wallpapers/arch.png &
launch-polybar &
sxhkd ~/.config/sxhkd/bspwm-sxhkdrc &
input-setup &
dunst &
numlockx &
