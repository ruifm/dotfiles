[diff]
        tool = nvimdiff2
        algorithm = histogram
[difftool "nvimdiff2"]
        cmd = nvim -d $LOCAL $REMOTE
        trustExitCode = true
[rebase]
        autoStash = true
[merge]
        tool = nfugitive
            # if not using a tool name with builtin support, must supply mergetool cmd
                # as below
[mergetool "nvimdiff4"]
        cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "nfugitive"]
        cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[commit]
	verbose = true
        gpgsign = true
[gpg]
        program = gpg2
