[diff]
    tool = vimdiff2
    algorithm = histogram
[difftool "vimdiff2"]
    cmd = $EDITOR -d $LOCAL $REMOTE
    trustExitCode = true
[rebase]
    autoStash = true
[pull]
	ff = only
[merge]
    tool = fugitive
[mergetool "vimdiff4"]
    cmd = $EDITOR -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[mergetool "fugitive"]
    cmd = $EDITOR -f -c "Gvdiffsplit!" "$MERGED"
