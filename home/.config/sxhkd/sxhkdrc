super+Return
    $TERMINAL

super+space
    cd "$(xcwd)" && $TERMINAL

super+r
    rofi -show run

super+d
    cd ~/dotfiles && eval $FZF_DEFAULT_COMMAND | rofi -width 90 -dmenu -p dotfiles | xargs -d '\n' -r $TERMINAL -e $EDITOR

super+a
    rg --files | rofi -width 90 -dmenu -p home | xargs -r xdg-open

super+e
    emoji

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

super+{minus,plus}
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

super+shift+m
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Prev,Play,Next}
    playerctl {previous,play-pause,next}

super+{Left,Down,Right}
    playerctl {previous,play-pause,next}

XF86MonBrightness{Down,Up}
    sudo light -{U,A} 5

super+{Prior,Next}
    sudo light -{U,A} 5

XF86Display
    xset dpms force off

@Print
    scrot -q 100 -t 10 -s '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

shift+@Print
    scrot -q 100 -t 10 '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

super+o;{m,s,r,e,n,t,f,w,p}
    {spowrap,stream,$TERMINAL -e tuir,$TERMINAL -e neomutt, $TERMINAL -e newsboat,torwrap,$TERMINAL -e lf,firefox,$TERMINAL -e python3 -i -c 'from numpy import *'}

super+shift+s
    locknpause

super+alt+c
    showclip

super+alt+n;{r,k}
    record {start,stop}
