mod4+Return
    $TERMINAL

mod4+m
    rofi -show run

mod4+d
    cd ~/dotfiles && eval $FZF_DEFAULT_COMMAND | rofi -width 90 -dmenu -p dotfiles | xargs -d '\n' -r $TERMINAL -e $EDITOR

mod4+a
    rg --files | rofi -width 90 -dmenu -p home | xargs -r $OPENER

mod4+e
    emoji

XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

mod4+{minus,plus}
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

mod4+shift+m
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86Audio{Prev,Play,Next}
    playerctl {previous,play-pause,next}

mod4+{Left,Down,Right}
    playerctl {previous,play-pause,next}

XF86MonBrightness{Down,Up}
    sudo light -{U,A} 5

mod4+{Prior,Next}
    sudo light -{U,A} 5

XF86Display
    xset dpms force off

@Print
    scrot -q 100 -t 10 -s '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

shift+@Print
    scrot -q 100 -t 10 '%Y-%m-%d-%H-%M-%S.png' -e 'mv $f ~/pics/screenshots'

mod4+shift+f
    $TERMINAL -e lf

mod4+w
    firefox

mod4+p
    $TERMINAL -e python3 -i -c 'from numpy import *'

mod4+o;{m,s,r,e,n,t}
    {spowrap,stream,$TERMINAL -e tuir,$TERMINAL -e neomutt, $TERMINAL -e newsboat,torwrap}

mod4+g
    locknpause

mod4+shift+c
    showclip

mod4+n;{r,k}
    record {start,stop}
