#!/usr/bin/env sh

resolve_url() {
    if [ -f "$1" ]; then
        local_url="$1"
    else
        local_url="/tmp/$(echo "$1" | sed "s/.*\///")"
        curl -sL "$1" > "$local_url"
    fi
    printf "%s" "$local_url"
}

if [ -z "$1" ]; then
    url=$(xclip -o -selection clipboard)
else
    url="$1"
fi

case "$url" in
	*.mkv|*.webm|*.mp4|*.mp3|*.ogg|*.mov|*youtube.com/watch*|*youtube.com/playlist*|*youtu.be*|*twitch.tv*|acestream*)
		setsid mpv -quiet "$url" >/dev/null 2>&1 & ;;
	*lbry*)
        lbry_url=$(curl "$url" | grep embed | sed 's/.*embed\(.*\)">.*/\1/' | cut -d '"' -f1 | awk -v prefix="https://cdn.lbryplayer.xyz/api/v2/streams/free" '{print prefix $0}')
		setsid mpv -quiet "$lbry_url" >/dev/null 2>&1 & ;;
	*.png|*.jpg|*.jpe|*.jpeg|*.gif)
        local_url=$(resolve_url $url)
        setsid sxiv -a "$local_url"  >/dev/null 2>&1 & ;;
	*.pdf|*.ps|*.epub)
        local_url=$(resolve_url $url)
		setsid zathura "$local_url"  >/dev/null 2>&1 & ;;
	*.torrent)
        local_url=$(resolve_url $url)
		setsid toradd "$local_url"  >/dev/null 2>&1 & ;;
	magnet:*)
		setsid toradd "$url" >/dev/null 2>&1 & ;;
	*rss*|*feed*|http*.xml|http*.atom)
		setsid rssadd "$url" >/dev/null 2>&1 & ;;
	mailto:*)
		setsid neomutt "$url" >/dev/null 2>&1 & ;;
	*.dot)
		setsid xdot "$url" >/dev/null 2>&1 & ;;
	http*)
        if pgrep firefox >/dev/null 2>&1; then
            firefox "$url" >/dev/null 2>&1 &
        else
            w3m "$url"
        fi ;;
    *)
        "$EDITOR $1" ;;
esac
