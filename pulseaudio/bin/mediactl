#!/usr/bin/env sh

if [ "$(playerctl status 2>&1)" != "No players found" ]; then
    case "$1" in
        "info")
            printf "%s - %s" "$(playerctl metadata title 2>&1)" "$(playerctl metadata artist 2>&1)"
            ;;
        *) playerctl "$@"
            ;;
    esac
fi
pkill -RTMIN+10 i3blocks
